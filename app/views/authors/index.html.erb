<h2>Authors</h2>

<table class="table table-striped">
  <tr>
    <th>Authors Name</th>
    <th>Actions</th>
  </tr>

  <% @authors.each do |auth| %>
    <tr>
      <td><%= auth.first_name%> <%= auth.last_name%></td>
      <td><%= link_to "Edit", edit_author_path(auth.id)%> |
          <%= link_to "Delete", author_path(auth), method: :delete, data: {confirm: "Are you sure?"}%></td>
    </tr>
  <% end %>
</table>
